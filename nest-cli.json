{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "watchAssets": true,
 "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [".input.ts", ".args.ts", "entity.ts", "type.ts"],
          "introspectComments": true
        }
      }
    ]
  }
}
